{# {% extends 'base.html.twig' %}

{% block body %} #}

    <button class="close-button" data-close aria-label="Close modal" type="button">
        <span aria-hidden="true">&times;</span>
    </button>

     <div class="grid-x grid-padding-x">
        <div class="cell medium-10"></div>
        <div class="cell medium-2">
            <a class="button" href="{{ path('relation_index') }}">
                <i class="fas fa-list-ol" title="{{ 'Index.Back'|trans }}"></i>
            </a>
        </div>
    </div>
      {% if is_granted('ROLE_ADMIN') %}

    <h4>{{ relation.name }}</h4>

    <br>
        
        <div class="grid-x grid-padding-x">
            <div class="cell medium-2"></div>
            <div class="cell medium-4">
                {{ 'Relation.Kind of relation'|trans }}           
            </div>
            <div class="cell medium-6">
                {% if relation.kindOfRelation %}
                    {{ 'Relation.Customer'|trans }}    
                {% else %}
                    {{ 'Relation.Supplier'|trans }}    
                {% endif %}
            </div>
        </div>
        <div class="grid-x grid-padding-x">
            <div class="cell medium-2"></div>
            <div class="cell medium-4">
                {{ 'Relation.Street'|trans }}    
            </div>
            <div class="cell medium-6">
                {{ relation.street }}
            </div>
        </div>
        <div class="grid-x grid-padding-x">
            <div class="cell medium-2"></div>
            <div class="cell medium-4">
                    {{ 'Relation.Housenumber'|trans }}            
            </div>
            <div class="cell medium-6">
                {{ relation.housenumber }}
            </div>
        </div>
        <div class="grid-x grid-padding-x">
            <div class="cell medium-2"></div>
            <div class="cell medium-4">
                {{ 'Relation.Postalcode'|trans }}            
            </div>
            <div class="cell medium-6">
                {{ relation.postalCode }}
            </div>
        </div>
        <div class="grid-x grid-padding-x">
            <div class="cell medium-2"></div>
            <div class="cell medium-4">
                {{ 'Relation.City'|trans }}            
            </div>
            <div class="cell medium-6">
                {{ relation.city }}
            </div>
        </div>
        <div class="grid-x grid-padding-x">
            <div class="cell medium-2"></div>
            <div class="cell medium-4">
                {{ 'Relation.Telephone'|trans }}            
            </div>
            <div class="cell medium-6">
                {{ relation.telephone }}
            </div>
        </div>
        <div class="grid-x grid-padding-x">
            <div class="cell medium-2"></div>
            <div class="cell medium-4">
                {{ 'Relation.Email'|trans }}
            </div>
            <div class="cell medium-6">
                {{ relation.email }}
            </div>
        </div>
        <div class="grid-x grid-padding-x">
            <div class="cell medium-2"></div>
            <div class="cell medium-4">
                {{ 'Relation.Allergies'|trans }}
            </div>
            <div class="cell medium-6">
                {{ relation.allergies }}
            </div>
        </div>
        <div class="grid-x grid-padding-x">
            <div class="cell medium-2"></div>
            <div class="cell medium-4">
                {{ 'Relation.Bankaccountnumber'|trans }}
            </div>
            <div class="cell medium-6">
                {% if relation.bankAccountNumber == null %}
                    {{ 'Message.Unknown'|trans }}
                {% else %}
                    {{ relation.bankAccountNumber }}
                {% endif %}
            </div>
        </div>
        <div class="grid-x grid-padding-x">
            <div class="cell medium-2"></div>
            <div class="cell medium-4">
                {{ 'Relation.Extra info'|trans }}
            </div>
            <div class="cell medium-6">
                {% if relation.extraInfo == null %}
                    {{ 'Message.Unknown'|trans}}
                {% else %}
                    {{ relation.extraInfo }}
                {% endif %}
            </div>
        </div>
        <div class="grid-x grid-padding-x">
            <div class="cell small-6"></div>
            <div class="cell small-2 text-right">
                <a class="button"  title="{{ 'Index.Edit'|trans }}" href="javascript:void(0)" data-path="{{ path('relation_edit', { 'id': relation.id }) }}">
                    <i class="far fa-edit"></i>
                </a>
            </div>
            {{ form_start(delete_form) }}
            {# <a class="button" href="{{ path('relation_delete', { 'id': relation.id }) }}" title="Verwijderen">
                Verwijderen
            </a> #}
                <button class="button" type="submit"  title="{{ 'Form.Delete'|trans }}">
                    <i class="fas fa-trash-alt"></i>
                </button>
            {{ form_end(delete_form) }}
            
            <div class="cell small-4"></div>
        </div>
    {% endif %}
{# {% endblock %} #}
