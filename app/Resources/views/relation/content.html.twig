{# {% extends 'base.html.twig' %}

{% block body %} #}

    <button class="close-button" data-close aria-label="Close modal" type="button">
        <span aria-hidden="true">&times;</span>
    </button>

{% set newRelation = relation.id == null%}
{{ form_start(form) }}
      <div class="grid-x grid-padding-x">
            <div class="cell medium-10"></div>
            <div class="cell medium-2">
                <a href="{{ path('relation_index') }}"  title="{{ 'Index.Back'|trans }}" class="button">
                    <i class="fas fa-list-ol"></i></a>
            </div>
        </div>

    <h4>{% if newRelation != null %}{{ 'Relation.Add'|trans }}{% else %}{{ 'Relation.Edit'|trans }}{% endif %}</h4>

    <br>

        <div class="grid-x grid-padding-x">
            <div class="cell medium-3"></div>
            <div class="cell medium-3">
                {{ 'Relation.Kind of relation'|trans }}
                {# {{ form_label(form.kindOfRelation) }} #}
            </div>
            <div class="cell medium-3">
                {{ form_widget(form.kindOfRelation) }}
            </div>
            <div class="cell medium-3">
                    {{ form_errors(form.kindOfRelation) }}
            </div>
        </div>
        <div class="grid-x grid-padding-x">
            <div class="cell medium-3"></div>
            <div class="cell medium-3">
                {{ 'Relation.Name'|trans }}
            </div>
            <div class="cell medium-3">
                {{ form_widget(form.name) }}
            </div>
