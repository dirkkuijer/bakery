        </div>
         <div class="grid-x grid-padding-x">
                <div class="cell medium-3"></div>
                <div class="cell medium-3"></div>
                <div class="cell medium-3 text-right">
                {% if newRelation != null%}
                   <button type="reset" class="button">
                        <i class="fas fa-remove-format" title="{{ 'Form.Empty'|trans }}"></i>
                    </button>
                {% endif %}
                    <button class="button" type="submit" title="{{ 'Form.Save'|trans }}">
                        <i class="far fa-save"></i>
                    </button>
                </div>
                <div class="cell medium-3"></div>
            </div>
    {{ form_end(form) }}
