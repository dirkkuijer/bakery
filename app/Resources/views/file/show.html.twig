{% extends 'base.html.twig' %}

{% block stylesheet %}
    {{ parent() }}
{% endblock %}

 {% block javascript %}
        {{ parent() }}
{% endblock %}

{% block body %}

    <div class="grid-x grid-padding-x">
        <div class="cell medium-10"></div>
        <div class="cell medium-2">
            <a class="button" href="{{ path('file_index') }}">Overzicht</a>
        </div>
    </div>
    {% if is_granted('ROLE_ADMIN') %}
  
    <h4>Bestand</h4>

    <br> 

    <div class="grid-x grid-padding-x">
        <div class="cell medium-2"></div>
        <div class="cell medium-4">
            Bestand
         </div>
        <div class="cell medium-6">
            {{ file.filename }}
        </div>    
    </div>    
    <div class="grid-x grid-padding-x">
        <div class="cell medium-2"></div>
        <div class="cell medium-4">
            Datum
        </div>
        <div class="cell medium-6">{% if file.date %}{{ file.date|date('d-m-Y') }}{% endif %}</td>
        </div>
    </div>
    <div class="grid-x grid-padding-x">
        <div class="cell medium-2"></div>
        <div class="cell medium-4">
            Kwartaal
        </div>
        <div class="cell medium-6">{{ file.period }}</td>
        </div>
    </div>

     <div class="grid-x grid-padding-x">
        <div class="cell small-6"></div>
        <div class="cell small-2 text-right">
            {# <a class="button" href="{{ path('file_edit', { 'id': file.id }) }}">Bewerken</a> #}
        </div>
            {{ form_start(delete_form) }}
                <button class="button" type="submit">Verwijderen</button>
            {{ form_end(delete_form) }}
      <div class="cell small-4"></div>
        </div>
            
    {% endif %}
{% endblock %}
