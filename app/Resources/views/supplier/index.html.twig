{% extends 'base.html.twig' %}

{% block body %}

    <div class="grid-x grid-padding-x">
        <div class="cell medium-10"></div>
        <div class="cell medium-2">
            <a class="button" href="{{ path('supplier_new') }}">+ Nieuwe leverancier</a>
        </div>
    </div>
    
    <h4>Leveranciers</h4>
    
    <br>
    <div class="grid-x grid-padding-x">
        <div class="cell medium-1"></div>
        <div class="cell medium-10">
            
        <table class="stack">
            <thead>
                <tr>
                    <th>Naam</th>
                    <th>E-mail</th>
                    <th>Telefoon</th>
                    <th>Rekeningnummer</th>
                    <th>Extra informatie</th>
                </tr>
            </thead>
            <tbody>
                {% for supplier in suppliers %}
                <tr>
                    <td>{{ supplier.name }}</td>
                    <td>{{ supplier.email }}</td>
                    <td>{{ supplier.bankaccountNumber }}</td>
                    <td>{{ supplier.extraInfo }}</td>
                    <td>
                        <a class="button" href="{{ path('supplier_show', { 'id': supplier.id }) }}">Inzien</a>
                        <a class="button" href="{{ path('supplier_edit', { 'id': supplier.id }) }}">Bewerken</a>

                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
        <div class="cell medium-1"></div>
        </div>
    </div>
{% endblock %}
