{% extends 'base.html.twig' %}

{% block body %}


    <div class="grid-x grid-padding-x">
        <div class="cell medium-10"></div>
        <div class="cell medium-2">
            <a class="button" href="{{ path('invoice_new') }}">+ Нова фактура</a>
        </div>
    </div>

    <h4>Фактуре</h4>

    <br>

    {% if is_granted('ROLE_ADMIN') %}
    
    <div class="grid-x grid-padding-x">
        <div class="cell medium-1"></div>
        <div class="cell medium-10">

            <table class="stack hover">
                <thead>
                    <tr>
                        <th>Број фактуре</th>
                        <th>Име</th>
                        <th>Презиме</th>
                        <th>Датум</th>
                        <th>Објашњење</th>
                    </tr>
                </thead>
                <tbody>
                    {% for invoice in invoices %}   
                    <tr>
                        <td>{{ invoice.invoiceNumber }}</td>
                        <td>{{ invoice.firstname }}</td>
                        <td>
                            {% for customer in customers %}
                            
                            {% if invoice.customer.id == customer.id %}
                                <a href=" {{ path('customer_show', { 'id' : customer.id}) }} ">{{ invoice.lastname }}</a>
                            {% endif %}
                        {% endfor %}
                        </td>
                        <td>{% if invoice.date %}{{ invoice.date|date('d-m-Y') }}{% endif %}</td>
                        <td>{{ invoice.description }}</td>
                        <td>
                            <a class="button" href="{{ path('invoice_show', { 'id': invoice.id }) }}">
                                Bиди
                            </a>
                            <a class="button" href="{{ path('invoice_edit', { 'id': invoice.id }) }}">
                                Измени
                            </a>
                        </td>
                    </tr>
                {% endfor %}    
                </tbody>
            </table>
            <div clas="cell medium-1"></div>
        </div>
    </div>

        
    {% endif %}
{% endblock %}
