
    <div class="grid-x grid-padding-x">
        <div class="cell medium-10"></div>
        <div class="cell medium-2">
            <a class="button" href="{{ path('invoice_index') }}">Overzicht</a>
        </div>
    </div>
    {% if is_granted('ROLE_ADMIN') %}
  
    <button class="close-button" data-close aria-label="Close modal" type="button">
        <span aria-hidden="true">&times;</span>
    </button>

    <h4>Factuur</h4>

    <br> 
    
        <div class="grid-x grid-padding-x">
            <div class="cell medium-2"></div>
            <div class="cell medium-4">
                Naam            
            </div>
            <div class="cell medium-6">
                {{ invoice.relation.name }}
            </div>
         </div>
        <div class="grid-x grid-padding-x">
            <div class="cell medium-2"></div>
            <div class="cell medium-4">
                Datum
            </div>
            <div class="cell medium-6">
                {% if invoice.date %}{{ invoice.date|date('d-m-Y') }}{% endif %}
            </div>
        </div>
        <div class="grid-x grid-padding-x">
            <div class="cell medium-2"></div>
            <div class="cell medium-4">
                Omschrijving
            </div>
            <div class="cell medium-6">
                {{ invoice.description }}
            </div>
        </div>
        <div class="grid-x grid-padding-x">
            <div class="cell medium-2"></div>
            <div class="cell medium-4">
                    Factuurnummer
            </div>
            <div class="cell medium-6">
                <a class="button" href="{{ path('invoice.pdf', { 'id': invoice.id }) }}" target="_blank">
                    {{ invoice.invoiceNumber }}
                (PDF)</a>
            </div>
        </div>
        <div class="grid-x grid-padding-x">
            <div class="cell medium-2"></div>
            <div class="cell medium-4">
                    Bedrag
            </div>
            <div class="cell medium-6">
               &#8364; {{ invoice.amount|number_format(2, ',','.')  }}
            </div>
        </div>
        {# <div class="grid-x grid-padding-x">
            <div class="cell medium-2"></div>
            <div class="cell medium-4">
                    Bedrag incl. BTW
            </div>
            <div class="cell medium-6">
                {{ invoice.amountWithVat }}
            </div>
        </div> #}
        <div class="grid-x grid-padding-x">
            <div class="cell medium-2"></div>
            <div class="cell medium-4">
                BTW-bedrag
            </div>
            <div class="cell medium-6">
                &#8364; {{ invoice.vatAmount|number_format(2, ',','.')  }}
            </div>
        </div>
        <div class="grid-x grid-padding-x">
            <div class="cell medium-2"></div>
            <div class="cell medium-4">
                BTW-percentage
            </div>
            <div class="cell medium-6">
                {{ invoice.vatPercentage|number_format(2, ',' ,'.') }} %
            </div>
        </div>
        <div class="grid-x grid-padding-x">
            <div class="cell medium-2"></div>
            <div class="cell medium-4">
                Totaal
            </div>
            <div class="cell medium-6">
                {# {% set totalAmount = invoice.amount + ((invoice.amount / 100) * invoice.vatPercentage) %} #}
                <strong>&#8364; {{ invoice.amountWithVat|number_format(2, ',','.') }}</strong>
            </div>
        </div>
        <div class="grid-x grid-padding-x">
            <div class="cell medium-2"></div>
            <div class="cell medium-4">
                Factuur verzonden op
            </div>
            <div class="cell medium-6">
                {% if invoice.invoiceSend is not null %}
                    {{ invoice.invoiceSend|date("d-m-Y") }}
                {% else %}
                    N.v.t.
                {% endif %}
            </div>
        </div>
        <div class="grid-x grid-padding-x">
            <div class="cell medium-2"></div>
            <div class="cell medium-4">
                Status
            </div>
            <div class="cell medium-6">
                {% if invoice.statusPayment == 1 %}
                    Betaald
                {% else %}
                    Niet betaald
                {% endif %}
            </div>
        </div>
        
        <div class="grid-x grid-padding-x">
            <div class="cell small-6"></div>
            <div class="cell small-2 text-right">
                <a class="button" href="javascript:void(0)" data-reveal-id="newInvoice" data-path="{{ path('invoice_edit', { 'id': invoice.id }) }}">Bewerken</a>
            </div>
            
            {{ form_start(delete_form) }}
            {#<input type="submit" class="button" value="Verwijderen" href="{{ path('invoice_delete', { 'id': invoice.id }) }}" title="Verwijderen" />#}
            
            <button class="button" type="submit" title="Verwijderen">
                Verwijderen
            </button> 
            {{ form_end(delete_form) }}
            
            <div class="cell small-4"></div>
        </div>
            
    {% endif %}
{# {% endblock %} #}
