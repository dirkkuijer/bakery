{% extends 'base.html.twig' %}

{% block body %}
    <h3>Factuur</h3>
     {% if is_granted('ROLE_ADMIN') %}
    <table>
        <tbody>
            <tr>
                <th>Voornaam</th>
                <td>{{ invoice.firstName }}</td>
            </tr>
            <tr>
                <th>Achternaam</th>
                <td>{{ invoice.lastName }}</td>
            </tr>
            <tr>
                <th>Datum</th>
                <td>{% if invoice.date %}{{ invoice.date|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Omschrijving</th>
                <td>{{ invoice.description }}</td>
            </tr>
            <tr>
                <th>Factuurnummer</th>
                <td>{{ invoice.invoiceNumber }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('views/invoice/invoice_index') }}">Overzicht</a>
        </li>
        <li>
            <a href="{{ path('invoice_edit', { 'id': invoice.id }) }}">Bewerken</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
    {% endif %}
{% endblock %}
