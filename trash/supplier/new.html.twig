{% extends 'base.html.twig' %}

{% block body %}

        <div class="grid-x grid-padding-x">
            <div class="cell medium-10"></div>
            <div class="cell medium-2">
                <a class="button" href="{{ path('supplier_index') }}">Overzicht</a>
            </div>
        </div>
    <h4>Leverancier opslaan</h4>

    <br>
    {{ form_start(form) }}
        {# {{ form_widget(form) }} #}
        <div class="grid-x grid-padding-x">
            <div class="cell medium-3"></div>
            <div class="cell medium-3">
                {{ form_label(form.name) }}
            </div>
            <div class="cell medium-3">
                {{ form_widget(form.name) }}
            </div>
            <div class="cell medium-3">
                {{ form_errors(form.name) }}
            </div>
        </div>
        <div class="grid-x grid-padding-x">
            <div class="cell medium-3"></div>
            <div class="cell medium-3">
                {{ form_label(form.email) }}
            </div>
            <div class="cell medium-3">
                {{ form_widget(form.email) }}
            </div>
            <div class="cell medium-3">
                {{ form_errors(form.email) }}
            </div>
        </div>
        <div class="grid-x grid-padding-x">
            <div class="cell medium-3"></div>
            <div class="cell medium-3">
                {{ form_label(form.telephone) }}
            </div>
            <div class="cell medium-3">
                {{ form_widget(form.telephone) }}
            </div>
            <div class="cell medium-3">
                {{ form_errors(form.telephone) }}
            </div>
        </div>
        <div class="grid-x grid-padding-x">
            <div class="cell medium-3"></div>
            <div class="cell medium-3">
                {{ form_label(form.bankaccountNumber) }}
            </div>
            <div class="cell medium-3">
                {{ form_widget(form.bankaccountNumber) }}
            </div>
            <div class="cell medium-3">
                {{ form_errors(form.bankaccountNumber) }}
            </div>
        </div>
        <div class="grid-x grid-padding-x">
            <div class="cell medium-3"></div>
            <div class="cell medium-3">
                {{ form_label(form.extraInfo) }}
            </div>
            <div class="cell medium-3">
                {{ form_widget(form.extraInfo) }}
            </div>
            <div class="cell medium-3">
                {{ form_errors(form.extraInfo) }}
            </div>
        </div>
        
        <div class="grid-x grid-padding-x">
            <div class="cell medium-6"></div>
            <div class="cell medium-3 text-right">
                <input class="button" type="reset" value="Annuleren" />
                <input class="button" type="submit" value="Opslaan" />
            </div>
            <div class="cell medium-3"></div>
        </div>
    {{ form_end(form) }}
   
{% endblock %}
